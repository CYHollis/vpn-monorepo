{
    "files.associations": {
        "**/tsconfig/**": "jsonc",
        "**/tsconfig/package.json": "json"
    },
    "files.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/.turbo": true,
        "**/tsconfig.tsbuildinfo": true
    },
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always"
    },
    "editor.formatOnSave": false,
}